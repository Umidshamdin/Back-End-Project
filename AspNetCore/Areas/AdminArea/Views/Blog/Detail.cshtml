@model Blog

@{
    ViewData["Title"] = "Detail";

}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Notice Detail</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Notice" asp-action="Create">Create</a></div>


                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                            <th>
                                Image
                            </th>
                            <th>
                                Time
                            </th>
                            
                            <th>
                                Author
                            </th>
                            <th>
                                Description
                            </th>
                            </thead>
                            <tbody>

                            <td>
                                <img src="~/assets/img/blog/@Model.Image" style="width:150px;height:130px" alt="slider" />
                            </td>
                            

                            <td>
                                <h3>@Model.Author</h3>
                            </td>

                            <td>
                                <h3>@Model.Time</h3>
                            </td>
                            <td>
                                <h3>@Model.Description</h3>
                            </td>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
