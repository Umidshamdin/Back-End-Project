
@model Blog
@{
    ViewData["Title"] = "Update";

}

<div class="container mt-5">
    <div class=" img">
        <img style="width:400px;height:400px;" src="~/assets/img/blog/@Model.Image" alt="Alternate Text" />
    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">

        <div class="form-group">
            <label>Choose photo</label>
            <input class="form-control" style="width:300px" asp-for="Photo">

        </div>
      
        <div class="form-group">
            <label>Choose photo</label>
            <input class="form-control" style="width:300px" asp-for="Author">

        </div>

        <div class="form-group">
            <label>Choose Name</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Time" value="@Model.Time">

        </div>


        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Description" value="@Model.Description">

        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>



    </form>



</div>

