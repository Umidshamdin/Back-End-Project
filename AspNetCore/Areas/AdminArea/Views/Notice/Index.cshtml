@model List<Notice>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Notice</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Notice" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> Number </th>
                                    <th> Date </th>
                                    <th> Description </th>
                                   

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var notice in Model)
                                {
                                <tr>
                                    <td> @count </td>
                                    <td> @notice.Time  </td>
                                    <td>@notice.Description  </td>

                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@notice.Id">
                                            Detail
                                        </a>
                                        <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@notice.Id">
                                            Update
                                        </a>
                                        <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@notice.Id">
                                            <button class="btn btn-danger btn-sm" type="submit">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>count++;
                                }




                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

