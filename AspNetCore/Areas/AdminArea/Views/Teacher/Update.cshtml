
@model Teacher
@{
    ViewData["Title"] = "Update";

}

<div class="container mt-5">
    <div class=" img">
        <img style="width:400px;height:400px;" src="~/assets/img/teacher/@Model.Image" alt="Alternate Text" />
    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">

        <div class="form-group">
            <label>Choose photo</label>
            <input class="form-control" style="width:300px" asp-for="Photo">

        </div>


        <div class="form-group">
            <label>Choose Name</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Name" value="@Model.Name">

        </div>
        <div class="form-group">
            <label>Choose Name</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Posinition" value="@Model.Posinition">

        </div>
        <div class="form-group">
            <label>Choose Name</label>
            <input type="text" class="form-control" style="width:300px" asp-for="About" value="@Model.About">

        </div>

        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Experience" value="@Model.Experience">

        </div>
        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Hobby" value="@Model.Hobby">

        </div>
        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Faculty" value="@Model.Faculty">

        </div>
        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="PhoneNumber" value="@Model.PhoneNumber">

        </div>
        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Email" value="@Model.Email">

        </div>
        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="SkillName" value="@Model.SkillName">

        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>



    </form>



</div>

