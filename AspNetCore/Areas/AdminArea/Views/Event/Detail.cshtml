@model Event
@{
    ViewData["Title"] = "Detail";

}


<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Notice Detail</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Notice" asp-action="Create">Create</a></div>

                       
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                </tr>
                            </thead>
                            <tbody>

                            <td>
                                <img src="~/assets/img/event/@Model.Image" style="width:150px;height:130px" alt="slider" />
                            </td>
                            <tr>

                                <h3>@Model.Time</h3>
                                <h3>@Model.Header</h3>
                                <h3>@Model.DayTime</h3>
                                <h3>@Model.Address</h3>






                            </tr>






                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

