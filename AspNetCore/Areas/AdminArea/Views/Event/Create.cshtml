
@model Event
@{
    ViewData["Title"] = "Create";

}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="form-group">
            <label asp-for="Time"></label>
            <input class="form-control" style="width:300px" asp-for="Time">
            <span class="text-danger" asp-validation-for="Time"></span>
        </div>
        <div class="form-group">
            <label asp-for="Header"></label>
            <input class="form-control" style="width:300px" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label asp-for="DayTime"></label>
            <input class="form-control" style="width:300px" asp-for="DayTime">
            <span class="text-danger" asp-validation-for="DayTime"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input class="form-control" style="width:300px" asp-for="Location">
            <span class="text-danger" asp-validation-for="Location"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" style="width:300px" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>