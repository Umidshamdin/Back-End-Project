@model EventVM
@{
    ViewData["Title"] = "Update";

}

<div class="container mt-5">
    <div class=" img">
        <img style="width:400px;height:200px;" src="~/assets/img/event/@Model.Image" alt="Alternate Text" />
    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="form-group">
            <label asp-for="Time">Time</label>
            <input class="form-control" style="width:300px" asp-for="Time">
            <span class="text-danger" asp-validation-for="Time"></span>
        </div>

        <div class="form-group">
            <label asp-for="Header">Header</label>
            <input class="form-control" style="width:300px" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>

        <div class="form-group">
            <label asp-for="DayTime">DayTime</label>
            <input class="form-control" style="width:300px" asp-for="DayTime">
            <span class="text-danger" asp-validation-for="DayTime"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input class="form-control" style="width:300px" asp-for="Address">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>


    </form>



</div>
