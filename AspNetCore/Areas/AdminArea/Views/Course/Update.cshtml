
@model Course
@{
    ViewData["Title"] = "Update";

}

<div class="container mt-5">
    <div class=" img">
        <img style="width:400px;height:200px;" src="~/assets/img/course/@Model.Image" alt="Alternate Text" />
    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">

        <div class="form-group">
            <label>Choose photo</label>
            <input class="form-control" style="width:300px" asp-for="Photo">

        </div>

        <div class="form-group">
            <label>Choose Name</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Name" value="@Model.Name">

        </div>

        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Description" value="@Model.Description">

        </div>
        <div class="form-group">
            <label>Choose About</label>
            <input type="text" class="form-control" style="width:300px" asp-for="About" value="@Model.About">

        </div>

        <div class="form-group">
            <label>Choose Apply</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Apply" value="@Model.Apply">

        </div>

        <div class="form-group">
            <label>Choose Certification</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Certification" value="@Model.Certification">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.StudentCount" value="@Model.Feature.StudentCount">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.Time" value="@Model.Feature.Time">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.Duration" value="@Model.Feature.Duration">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.ClassDuration" value="@Model.Feature.ClassDuration">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.Level" value="@Model.Feature.Level">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.Language" value="@Model.Feature.Language">

        </div>
        <div class="form-group">
            <label>Choose Student Count</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.Assesments" value="@Model.Feature.Assesments">

        </div>


        <div class="form-group">
            <label>Choose Prise</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Feature.Prise" value="@Model.Feature.Prise">

        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>



    </form>



</div>
