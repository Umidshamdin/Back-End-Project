
@model Course
@{
    ViewData["Title"] = "Update";

}

<div class="container mt-5">
    <div class=" img">
        <img style="width:400px;height:200px;" src="~/assets/img/course/@Model.Image" alt="Alternate Text" />
    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">

        <div class="form-group">
            <label>Choose photo</label>
            <input class="form-control" style="width:300px" asp-for="Photo">

        </div>


        <div class="form-group">
            <label>Choose Posinition</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Name" value="@Model.Name">

        </div>

        <div class="form-group">
            <label>Choose Description</label>
            <input type="text" class="form-control" style="width:300px" asp-for="Description" value="@Model.Description">

        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>



    </form>



</div>
