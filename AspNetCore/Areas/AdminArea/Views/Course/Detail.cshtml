@model Course

@{
    ViewData["Title"] = "Detail";

}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                            <th>
                                Image
                            </th>
                            <th>
                                CourseName
                            </th>

                            <th>
                                Description
                            </th>
                            </thead>
                            <tbody>

                            <td>
                                <img src="~/assets/img/course/@Model.Image" style="width:150px;height:130px" alt="slider" />
                            </td>

                            <td>
                                <h3>@Model.Name</h3>
                            </td>


                            <td>
                                <h3>@Model.Description</h3>
                            </td>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


